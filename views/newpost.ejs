<body class="contact-page">
<%- include ('layouts/header.ejs') -%>
<main class="main">

    <!-- Page Title -->
    <div class="page-title">
        <div class="container d-lg-flex justify-content-between align-items-center">
            <h1 class="mb-2 mb-lg-0">New Post</h1>
            <nav class="breadcrumbs">
                <ol>
                    <li><a href="/">Home</a></li>
                    <li class="current">New Post</li>
                </ol>
            </nav>
        </div>
    </div><!-- End Page Title -->

    <!-- Contact Section -->
    <section id="contact" class="contact section">

        <div class="container" data-aos="fade-up" data-aos-delay="100">

            <div class="row gy-4">

                <div class="col-lg-8">
                    <form action="/newpost/storepost" method="post" data-aos="fade-up" data-aos-delay="200" enctype="multipart/form-data">
                        <div class="row gy-4">

                            <div class="col-md-12">
                                <input type="text" name="title" class="form-control" placeholder="Post Title" required="">
                            </div>

                            <div class="col-md-12">
                                <textarea class="form-control" name="body" rows="6" placeholder="Post Body" required=""></textarea>
                            </div>

                            <div class="col-md-12">
                                <input type="file" class="form-control" name="postimage" rows="6" placeholder="Post Image" />
                            </div>


                            <div class="col-md-12 text-center">
                                <div class="error-message"></div>
                                 <button type="submit">Publish Post</button>
                            </div>

                        </div>
                    </form>
                </div><!-- End Contact Form -->

            </div>

        </div>

    </section><!-- /Contact Section -->

</main>

